---
import "@/styles/globals.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Mayra Ibáñez - Periodista & TV Host" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-rose-50 text-neutral-800 antialiased selection:bg-rose-200 selection:text-rose-900">
    
    <main class="mx-auto w-full max-w-md md:max-w-3xl min-h-screen relative flex flex-col bg-white shadow-2xl overflow-hidden border-x border-rose-100/50 transition-all duration-300">
      
      <div class="fixed top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_top_right,rgba(255,182,193,0.15),transparent_60%)] pointer-events-none z-0"></div>
      
      <div class="relative z-10 flex flex-col flex-1 pb-12">
        <slot />
      </div>

      <footer class="relative z-20 mt-auto py-8 text-center bg-gradient-to-t from-white to-transparent">
        <div class="flex flex-col items-center gap-1">
            <p class="text-[10px] text-neutral-400 font-medium">
            © {new Date().getFullYear()} Mayra Ibáñez
            </p>
            <a 
            href="https://vanttacode.cl" 
            target="_blank" 
            class="text-[10px] font-bold text-rose-300 hover:text-rose-500 transition-colors flex items-center gap-1 uppercase tracking-widest"
            >
            <span>⚡ Developed by VanttaCode</span>
            </a>
        </div>
      </footer>
    </main>

    <div class="fixed inset-0 pointer-events-none z-[5] overflow-hidden">
        <div class="absolute top-[15%] left-[5%] text-pink-300/40 animate-pulse text-2xl">✨</div>
        <div class="absolute top-[40%] right-[8%] text-rose-300/30 animate-float text-xl delay-700">✦</div>
        <div class="absolute bottom-[20%] left-[10%] text-pink-400/20 animate-pulse text-3xl delay-300">★</div>
    </div>
  </body>
</html>