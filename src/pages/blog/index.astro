---
export const prerender = false;

import MobileAppLayout from "@/layouts/MobileAppLayout.astro";
import { supabaseServer } from "@/lib/supabaseServer";
import { SITE_HANDLE } from "@/lib/site";

/* Perfil */
const { data: dbProfile } = await supabaseServer
  .from("profiles")
  .select("*")
  .eq("handle", SITE_HANDLE)
  .single();

if (!dbProfile) throw new Error("Perfil no encontrado");

/* Override (consistencia con el index) */
const profile = {
  ...(dbProfile || {}),
  display_name: "Mayra Ib√°√±ez",
  email: "mayraibanezcontacto@gmail.com",
};

/* Posts publicados */
const { data: posts } = await supabaseServer
  .from("posts")
  .select("id, user_id, title, slug, excerpt, cover_url, published_at, created_at")
  .eq("user_id", dbProfile.id)
  .not("published_at", "is", null)
  .order("published_at", { ascending: false });

const list = posts ?? [];
---

<MobileAppLayout title={`Blog ¬∑ ${profile.display_name}`} description="Mini blog">
  
  {/* Fondo decorativo fijo - Ajustado para contraste con t√≠tulo rosa */}
  <div class="fixed inset-0 z-0 bg-gradient-to-b from-pink-200 via-pink-50 to-pink-300 pointer-events-none"></div>

  <div class="relative z-10 space-y-6 pt-2 pb-12 px-2">
    
    {/* Header Flotante */}
    <header class="flex items-center justify-between px-2">
      <a 
        href="/" 
        class="group flex items-center gap-2 px-4 py-2.5 rounded-full bg-white shadow-md border-2 border-pink-200 text-pink-500 font-bold text-sm hover:scale-105 hover:bg-pink-50 transition-all"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        <span>Volver</span>
      </a>
      
      <div class="bg-white px-4 py-2 rounded-full shadow-md border-2 border-pink-200">
        <span class="text-xs font-extrabold text-pink-400 uppercase tracking-widest">Blog Personal</span>
      </div>
    </header>

    {/* T√≠tulo de Secci√≥n BARBIE STYLE */}
    <section class="text-center py-8 relative">
      
      {/* Doodles decorativos */}
      <div class="absolute top-2 left-4 text-white animate-pulse opacity-80 drop-shadow-md">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
      </div>
      <div class="absolute bottom-0 right-6 text-pink-600 animate-bounce opacity-80 delay-300">
         <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="white" stroke-width="2"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
      </div>

      {/* T√≠tulo principal: TEXTO ROSA con BORDE BLANCO */}
      <h1 class="font-script text-6xl md:text-7xl text-pink-600 mb-3 relative z-10 text-shadow-sticker transform -rotate-2 hover:rotate-0 transition-transform duration-300">
        El Rinc√≥n de Mayra
      </h1>
      
      <p class="text-sm text-pink-500 font-extrabold max-w-[280px] mx-auto leading-relaxed bg-white py-1.5 px-4 rounded-full inline-block shadow-md border-2 border-pink-200 rotate-1">
        Historias, novedades y momentos pink! ‚ú®
      </p>
    </section>

    {/* Lista de Posts */}
    <section class="space-y-4 px-2">
      {list.length === 0 ? (
        <div class="flex flex-col items-center justify-center py-12 px-6 bg-white rounded-[2.5rem] border-2 border-pink-200 shadow-xl shadow-pink-200/50 text-center">
          <div class="mb-4 text-pink-300">
            <svg xmlns="http://www.w3.org/2000/svg" width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
          </div>
          <p class="text-pink-600 font-bold text-lg">¬°Ups! A√∫n no hay entradas.</p>
          <p class="text-xs text-pink-400 mt-2 font-medium">Estoy preparando algo incre√≠ble para ti. üíï</p>
        </div>
      ) : (
        list.map((p) => (
          <a
            href={`/blog/${p.slug}`}
            class="group relative block rounded-[2.5rem] bg-white p-4 shadow-lg shadow-pink-200/40 border-2 border-pink-100 hover:border-pink-400 hover:shadow-2xl hover:shadow-pink-400/30 hover:-translate-y-1 transition-all duration-300 overflow-hidden"
          >
            <div class="flex gap-4 items-start">
              {/* Imagen / Cover */}
              <div class="shrink-0 relative">
                {p.cover_url ? (
                  <img
                    src={p.cover_url}
                    class="h-24 w-24 rounded-3xl object-cover shadow-md border-2 border-pink-200 group-hover:scale-105 transition-transform duration-500"
                    alt=""
                    loading="lazy"
                    decoding="async"
                  />
                ) : (
                  <div class="h-24 w-24 rounded-3xl bg-pink-50 border-2 border-pink-200 flex items-center justify-center text-pink-300">
                     <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
                  </div>
                )}
              </div>

              {/* Contenido */}
              <div class="min-w-0 flex-1 py-1">
                <div class="text-[10px] font-extrabold text-pink-400 uppercase tracking-wider mb-1 flex items-center gap-1">
                   <span class="w-2 h-2 rounded-full bg-pink-400"></span>
                   {new Date(p.published_at ?? p.created_at).toLocaleDateString("es-CL", { day: 'numeric', month: 'short', year: 'numeric' })}
                </div>
                
                {/* T√çTULO EN ROSA FUERTE */}
                <h2 class="font-extrabold text-pink-600 text-lg leading-tight mb-2 group-hover:text-pink-500 transition-colors line-clamp-2">
                    {p.title}
                </h2>
                
                <p class="text-xs text-neutral-500 line-clamp-2 font-medium leading-relaxed">
                    {p.excerpt}
                </p>
              </div>
            </div>
            
            {/* Flecha */}
            <div class="absolute bottom-5 right-5 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-white bg-pink-500 rounded-full p-1.5 shadow-md">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </div>
          </a>
        ))
      )}
    </section>

    {/* Footer */}
    <footer class="pt-8 px-4">
      <div class="rounded-[3rem] border-2 border-pink-300 bg-white/90 backdrop-blur-xl p-8 text-center shadow-xl shadow-pink-200">
        
        <div class="text-xs font-bold text-pink-400 mb-6 uppercase tracking-widest">
          Dise√±ado con üíñ por{" "}
          <a class="text-pink-600 font-extrabold hover:text-pink-700 transition hover:underline" href="https://vanttacode.cl" target="_blank" rel="noreferrer">
            VanttaCode
          </a>
        </div>

        <a
          href="https://vanttacode.cl/linkbio"
          target="_blank"
          rel="noreferrer"
          class="relative group w-full flex items-center justify-center gap-2 px-6 py-4 rounded-full bg-gradient-to-r from-pink-500 to-rose-500 text-white font-extrabold text-sm tracking-wide shadow-xl shadow-pink-500/40 overflow-hidden transition-transform hover:scale-[1.02] border-2 border-white"
        >
