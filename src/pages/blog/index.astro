---
export const prerender = false;

import MobileAppLayout from "@/layouts/MobileAppLayout.astro";
import { supabaseServer } from "@/lib/supabaseServer";
import { SITE_HANDLE } from "@/lib/site";

/* Perfil */
const { data: dbProfile } = await supabaseServer
  .from("profiles")
  .select("*")
  .eq("handle", SITE_HANDLE)
  .single();

if (!dbProfile) throw new Error("Perfil no encontrado");

/* Override (consistencia con el index) */
const profile = {
  ...(dbProfile || {}),
  display_name: "Mayra Ibáñez",
  email: "mayraibanezcontacto@gmail.com",
};

/* Posts publicados */
const { data: posts } = await supabaseServer
  .from("posts")
  .select("id, user_id, title, slug, excerpt, cover_url, published_at, created_at")
  .eq("user_id", dbProfile.id)
  .not("published_at", "is", null)
  .order("published_at", { ascending: false });

const list = posts ?? [];
---

<MobileAppLayout title={`Blog · ${profile.display_name}`} description="Mini blog">
  
  {/* Fondo decorativo fijo para dar profundidad */}
  <div class="fixed inset-0 z-0 bg-gradient-to-b from-rose-50 via-white to-rose-50 pointer-events-none"></div>

  <div class="relative z-10 space-y-6 pt-2 pb-12 px-2">
    
    {/* Header Flotante */}
    <header class="flex items-center justify-between px-2">
      <a 
        href="/" 
        class="group flex items-center gap-2 px-4 py-2.5 rounded-full bg-white/80 backdrop-blur-md shadow-sm border border-white/50 text-rose-500 font-bold text-sm hover:scale-105 transition-all"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        <span>Volver</span>
      </a>
      
      <div class="bg-white/80 backdrop-blur-md px-4 py-2 rounded-full shadow-sm border border-white/50">
        <span class="text-xs font-bold text-neutral-400 uppercase tracking-widest">Blog Personal</span>
      </div>
    </header>

    {/* Título de Sección */}
    <section class="text-center py-4">
      <h1 class="font-script text-5xl text-rose-500 mb-2 drop-shadow-sm">
        El Rincón de Mayra
      </h1>
      <p class="text-sm text-neutral-500 font-medium max-w-[280px] mx-auto leading-relaxed">
        Historias, novedades y pequeños momentos compartidos contigo. ✨
      </p>
    </section>

    {/* Lista de Posts */}
    <section class="space-y-4 px-2">
      {list.length === 0 ? (
        <div class="flex flex-col items-center justify-center py-12 px-6 bg-white rounded-[2rem] border border-rose-100 shadow-xl shadow-rose-100/50 text-center">
          <div class="mb-4 text-rose-200">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
          </div>
          <p class="text-neutral-600 font-medium">Aún no he publicado entradas.</p>
          <p class="text-xs text-neutral-400 mt-1">¡Vuelve pronto para leer mis novedades!</p>
        </div>
      ) : (
        list.map((p) => (
          <a
            href={`/blog/${p.slug}`}
            class="group relative block rounded-[2rem] bg-white p-4 shadow-lg shadow-rose-100/30 border border-rose-50 hover:shadow-xl hover:shadow-rose-200/50 hover:-translate-y-1 transition-all duration-300 overflow-hidden"
          >
            <div class="flex gap-4 items-start">
              {/* Imagen / Cover */}
              <div class="shrink-0 relative">
                {p.cover_url ? (
                  <img
                    src={p.cover_url}
                    class="h-24 w-24 rounded-2xl object-cover shadow-sm group-hover:scale-105 transition-transform duration-500"
                    alt=""
                    loading="lazy"
                    decoding="async"
                  />
                ) : (
                  <div class="h-24 w-24 rounded-2xl bg-gradient-to-br from-rose-100 to-pink-50 flex items-center justify-center text-rose-300">
                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
                  </div>
                )}
              </div>

              {/* Contenido */}
              <div class="min-w-0 flex-1 py-1">
                <div class="text-[10px] font-bold text-rose-500 uppercase tracking-wider mb-1 flex items-center gap-1">
                   <span class="w-1.5 h-1.5 rounded-full bg-rose-500"></span>
                   {new Date(p.published_at ?? p.created_at).toLocaleDateString("es-CL", { day: 'numeric', month: 'short', year: 'numeric' })}
                </div>
                
                <h2 class="font-bold text-neutral-800 text-lg leading-tight mb-2 group-hover:text-rose-600 transition-colors line-clamp-2">
                    {p.title}
                </h2>
                
                <p class="text-xs text-neutral-500 line-clamp-2 font-medium leading-relaxed">
                    {p.excerpt}
                </p>
              </div>
            </div>
            
            {/* Icono flecha decorativa */}
            <div class="absolute bottom-4 right-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-rose-400">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </div>
          </a>
        ))
      )}
    </section>

    {/* Footer */}
    <footer class="pt-8 px-4">
      <div class="rounded-[2.5rem] border border-rose-100 bg-white/60 backdrop-blur-xl p-8 text-center shadow-lg shadow-rose-50">
        
        <div class="text-xs font-semibold text-neutral-400 mb-6 uppercase tracking-widest">
          Diseñado por{" "}
          <a class="text-rose-500 hover:text-rose-700 transition" href="https://vanttacode.cl" target="_blank" rel="noreferrer">
            VanttaCode
          </a>
        </div>

        <a
          href="https://vanttacode.cl/linkbio"
          target="_blank"
          rel="noreferrer"
          class="relative group w-full flex items-center justify-center gap-2 px-6 py-4 rounded-full bg-gradient-to-r from-rose-500 to-pink-600 text-white font-bold text-sm tracking-wide shadow-xl shadow-pink-500/30 overflow-hidden transition-transform hover:scale-[1.02]"
        >
          <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-500 rounded-full"></div>
          <span class="relative z-10">✨ ¿QUIERES TU PROPIO LINKBIO?</span>
        </a>

        <a href="/ingreso-admin" class="mt-6 block text-[10px] text-neutral-300 font-bold hover:text-rose-400 transition uppercase tracking-widest">
          Acceso Administrador
        </a>
      </div>
    </footer>
  </div>
</MobileAppLayout>
