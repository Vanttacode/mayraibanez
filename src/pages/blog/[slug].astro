---
export const prerender = false;

import MobileAppLayout from "@/layouts/MobileAppLayout.astro";
import { supabaseServer } from "@/lib/supabaseServer";
import { SITE_BASE_URL, SITE_HANDLE } from "@/lib/site";
import ShareBar from "@/components/blog/ShareBar";
import { marked } from "marked";
import sanitizeHtml from "sanitize-html";

const { slug } = Astro.params;

/* Perfil */
const { data: dbProfile } = await supabaseServer
  .from("profiles")
  .select("*")
  .eq("handle", SITE_HANDLE)
  .single();

if (!dbProfile) throw new Error("Perfil no encontrado");

/* Override (consistencia) */
const profile = {
  ...(dbProfile || {}),
  display_name: "Mayra Ibáñez",
};

/* Post */
const { data: post } = await supabaseServer
  .from("posts")
  .select("*")
  .eq("user_id", dbProfile.id)
  .eq("slug", slug)
  .single();

if (!post || !post.published_at) {
  return Astro.redirect("/blog");
}

/* Markdown → HTML (sanitizado) */
marked.setOptions({ mangle: false, headerIds: false });
const rawHtml = marked.parse(post.content_md || "");

const safeHtml = sanitizeHtml(rawHtml, {
  allowedTags: sanitizeHtml.defaults.allowedTags.concat(["img", "video", "source"]),
  allowedAttributes: {
    ...sanitizeHtml.defaults.allowedAttributes,
    img: ["src", "alt", "title", "loading", "decoding"],
    video: ["controls", "playsinline", "preload", "poster"],
    source: ["src", "type"],
  },
});

const canonical = `${SITE_BASE_URL}/blog/${post.slug}`;

/* Media (si existe columna jsonb `media`) */
const media = Array.isArray((post as any).media) ? (post as any).media : [];
---

<MobileAppLayout title={`${post.title} · ${profile.display_name}`} description={post.excerpt}>
  
  {/* Fondo decorativo fijo */}
  <div class="fixed inset-0 z-0 bg-gradient-to-b from-rose-50 via-white to-rose-50 pointer-events-none"></div>

  <div class="relative z-10 space-y-6 pt-2 pb-12 px-2">
    
    {/* Header Flotante */}
    <header class="flex items-center justify-between px-2">
      <a 
        href="/blog" 
        class="group flex items-center gap-2 px-4 py-2.5 rounded-full bg-white/80 backdrop-blur-md shadow-sm border border-white/50 text-rose-500 font-bold text-sm hover:scale-105 transition-all"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        <span>Volver</span>
      </a>
      
      <a 
        href="/"
        class="bg-white/80 backdrop-blur-md px-4 py-2 rounded-full shadow-sm border border-white/50 text-xs font-bold text-neutral-400 uppercase tracking-widest hover:text-rose-500 transition-colors"
      >
        Perfil
      </a>
    </header>

    <article class="relative overflow-hidden rounded-[2.5rem] bg-white p-6 md:p-8 shadow-xl shadow-rose-100/40 border border-rose-50">
      
      {/* Decoración Top */}
      <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-rose-300 via-pink-500 to-rose-300"></div>

      {/* Cover Image con Sombra y Glow */}
      {post.cover_url ? (
        <div class="relative mb-6 -mx-2 md:mx-0">
            <div class="absolute inset-0 bg-rose-500/10 blur-xl rounded-full transform scale-90 translate-y-4"></div>
            <img
            src={post.cover_url}
            class="relative w-full h-64 md:h-80 object-cover rounded-2xl shadow-md border border-rose-50"
            alt=""
            loading="eager"
            decoding="async"
            />
        </div>
      ) : null}

      {/* Meta Data */}
      <div class="flex items-center gap-3 mb-4">
         <span class="px-3 py-1 rounded-full bg-rose-50 text-rose-500 text-[10px] font-bold uppercase tracking-widest border border-rose-100">
            {new Date(post.published_at).toLocaleDateString("es-CL", { day: 'numeric', month: 'long', year: 'numeric' })}
         </span>
      </div>

      <h1 class="text-3xl md:text-4xl font-extrabold text-neutral-800 leading-tight mb-4 font-sans tracking-tight">
        {post.title}
      </h1>
      
      <p class="text-neutral-500 text-lg leading-relaxed border-l-4 border-rose-200 pl-4 italic mb-8">
        {post.excerpt}
      </p>

      <div class="my-6">
        <ShareBar client:visible title={post.title} url={canonical} />
      </div>

      {/* Galería de media */}
      {media.length ? (
        <div class="my-8">
          <div class="flex items-center gap-2 mb-4">
             <div class="h-px flex-1 bg-rose-100"></div>
             <span class="text-xs font-bold text-rose-400 uppercase tracking-widest">Galería</span>
             <div class="h-px flex-1 bg-rose-100"></div>
          </div>
          
          <div class="flex gap-4 overflow-x-auto snap-x snap-mandatory pb-4 scrollbar-hide">
            {media.map((m) => (
              <div class="min-w-[260px] max-w-[260px] snap-center rounded-2xl border border-rose-100 bg-white shadow-sm overflow-hidden p-1">
                {m.type === "video" ? (
                  <video
                    controls
                    playsinline
                    preload="metadata"
                    poster={m.poster_url ?? undefined}
                    class="w-full h-48 object-cover rounded-xl"
                  >
                    <source src={m.url} type={m.mime ?? "video/mp4"} />
                  </video>
                ) : (
                  <img
                    src={m.url}
                    alt=""
                    loading="lazy"
                    decoding="async"
                    class="w-full h-48 object-cover rounded-xl"
                  />
                )}
              </div>
            ))}
          </div>
        </div>
      ) : null}

      <div class="w-full h-px bg-neutral-100 my-8"></div>

      {/* Contenido HTML Limpio y Elegante */}
      <div class="prose prose-lg max-w-none 
          prose-headings:font-bold prose-headings:text-rose-500 prose-headings:font-sans
          prose-p:text-neutral-600 prose-p:leading-relaxed
          prose-a:text-pink-600 prose-a:font-bold prose-a:no-underline hover:prose-a:underline
          prose-strong:text-neutral-800
          prose-img:rounded-2xl prose-img:shadow-md
          prose-blockquote:border-l-rose-300 prose-blockquote:bg-rose-50/50 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:rounded-r-lg prose-blockquote:not-italic prose-blockquote:text-neutral-600
          prose-li:text-neutral-600">
        <Fragment set:html={safeHtml} />
      </div>

    </article>

    {/* Footer */}
    <footer class="pt-8 px-2">
      <div class="rounded-[2.5rem] border border-rose-100 bg-white/60 backdrop-blur-xl p-8 text-center shadow-lg shadow-rose-50">
        
        <div class="text-xs font-semibold text-neutral-400 mb-6 uppercase tracking-widest">
          Diseñado por{" "}
          <a class="text-rose-500 hover:text-rose-700 transition" href="https://vanttacode.cl" target="_blank" rel="noreferrer">
            VanttaCode
          </a>
        </div>

        <a
          href="https://vanttacode.cl/linkbio"
          target="_blank"
          rel="noreferrer"
          class="relative group w-full flex items-center justify-center gap-2 px-6 py-4 rounded-full bg-gradient-to-r from-rose-500 to-pink-600 text-white font-bold text-sm tracking-wide shadow-xl shadow-pink-500/30 overflow-hidden transition-transform hover:scale-[1.02]"
        >
          <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-500 rounded-full"></div>
          <span class="relative z-10">✨ ¿QUIERES TU PROPIO LINKBIO?</span>
        </a>

        <a href="/ingreso-admin" class="mt-6 block text-[10px] text-neutral-300 font-bold hover:text-rose-400 transition uppercase tracking-widest">
          Acceso Administrador
        </a>
      </div>
    </footer>
  </div>
</MobileAppLayout>
